{{- $.Scratch.Add "index" slice -}}
{{- range .Pages -}}
  {{- $.Scratch.Add "index" (dict 
    "title" .Title
    "url" .Permalink
    "date" (.Date.Format "2006-01-02")
    "lastmod" (.Lastmod.Format "2006-01-02")
    "description" .Description
    "content" .Plain
  ) -}}
{{- end -}}
{
  "term": "{{ .Title }}",
  "permalink": "{{ .Permalink }}",
  "count": {{ len .Pages }},
  "pages": {{ $.Scratch.Get "index" | jsonify }}
}
